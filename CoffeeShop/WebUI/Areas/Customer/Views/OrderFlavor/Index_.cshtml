@model IEnumerable<Core.Models.OrderFlavor>

<table>
        <tr>
            <td> Coffee Name </td>
            <td> Flavor Name </td>
            <td> Quantity </td>
            <td> Price </td>
            <td> Total Sum </td>
        </tr> 
    @foreach (var orderFlavor in Model)
    {
        <tr>
            <td> @orderFlavor.Flavor.Coffee.Name </td>
            <td> @orderFlavor.Flavor.Name </td>
            <td> @orderFlavor.Quantity </td>
            <td> @orderFlavor.Flavor.Price </td>
            <td> @(orderFlavor.Flavor.Price * orderFlavor.Quantity) </td>
        </tr> 
    }
        <tr style="border-top: 2px solid black">
            <td> </td>
            <td> </td>
            <td> </td>
            <td style="font-weight:bold"> Total: </td>
            <td style="font-weight:bold">  

            </td>
        </tr> 


</table>